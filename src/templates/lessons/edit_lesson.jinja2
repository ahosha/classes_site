{% extends "base.jinja2" %}
{% block content %}
    <div class="page-header">
        <h1>Edit Class</h1>
    </div>
    <div class="form">
        <form method="post">
            <div class="form-group">
                <label for="name">Name: </label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Name" value="{{ lesson.name }}">
            </div>
            <div class="form-group">
                <div class="input-group mb-3">
                  <div class="input-group-prepend">
                    <label class="input-group-text" for="teacher">Teacher:</label>
                  </div>
                    <select class="custom-select" id="teacherusername" name="teacherusername" data-width="fit" >
                        {% for teacher in teachers %}
                            <option  id="teacherusernameopt" name="teacherusernameopt" value="{{ teacher.username }}" {% if teacher.username==teacherusername %} selected="selected"{% endif %} > {{ teacher.username }}</option>
                        {% endfor %}
                    </select>
                </div>
                <span id="lessonURLPrefixHelp" class="help-block">Please select teacher for this class.</span>
            </div>
            <div class="form-group">
                <label for="date">Date</label>
                <input type="text" class="form-control" id="date" name="date" placeholder="span"
                       aria-describedby="dateHelp" value="{{ lesson.date }}">
                <span id="dateHelp" class="help-block">Select date for this class.</span>
            </div>
            <div class="form-group">
                <label for="time">Time</label>
                <input type="text" class="form-control" id="time" name="time" placeholder="span"
                       aria-describedby="timeeHelp" value="{{ lesson.time }}">
                <span id="timeeHelp" class="help-block">Select time for this class.</span>
            </div>
            <div class="form-group">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <label class="input-group-text" for="lessontype">Lesson Type:</label>
                    </div>
                    <select class="custom-select" id="lessontype" name="lessontype" data-width="fit" >
                        {% for type in types %}
                            <option  id="lessontypeopt"  name="lessontypeopt"  value="{{ type }}" {% if type==curlessontype %} selected="selected"{% endif %} > {{ type}}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-warning">Update</button>
        </form>
    </div>
{% endblock %}