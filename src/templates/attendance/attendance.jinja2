{% extends "base.jinja2" %}
{% block content %}
    <div class="page-header">
        <h1>
            <strong>{{ attendance.lessonname }} on {{ attendance.date }} at {{ attendance.time }}</strong>
        </h1>
    </div>
    <p>Teacher :<strong>{{ attendance.teacherusername }}</strong></p>
    <p>Student :<strong>{{ attendance.studentname }}</strong></p>
    {% if session['email'] in config.ADMINS %}
        <div class="panel panel-default">
            <div class="panel-body">
                <a class="btn btn-warning" href="{{ url_for('attendances.edit_attendance', attendance_id=attendance._id) }}" role="button">Edit
                    Attendance</a>
                <a class="btn btn-danger" href="{{ url_for('attendances.delete_attendance', attendance_id=attendance._id) }}" role="button">Permanently
                    Delete Attendance</a>
            </div>
        </div>
    {% endif %}
{% endblock %}