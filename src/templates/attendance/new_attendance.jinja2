{% extends "base.jinja2" %}
{% block content %}
     <div class="page-header">
        <h1>Create class attendance</h1>
    </div>
    <div class="form">
        <form method="post">
            <div class="form-group">
                <div class="input-group mb-3">
                  <div class="input-group-prepend">
                    <label class="input-group-text" for="teacherusername">Teacher:</label>
                  </div>
                    <select class="custom-select" id="teacherusername" name="teacherusername" data-width="fit" >
                        {% for teacher in teachers %}
                            <option  id="teacherusernameopt" name="teacherusernameopt" value="{{ teacher.username }}"  > {{ teacher.username }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <label class="input-group-text" for="lessonname">Lesson:</label>
                    </div>
                    <select class="custom-select" id="lessonname" name="lessonname" data-width="fit" >
                        {% for lesson in lessons %}
                            <option  id="lesson"  name="lesson"  value="{{ lesson.name }}"  > {{ lesson.name }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="input-group mb-3">
                  <div class="input-group-prepend">
                    <label class="input-group-text" for="studentname">Student:</label>
                  </div>
                    <select class="custom-select" id="studentname" name="studentname" data-width="fit" >
                        {% for student in students %}
                            <option  id="studentusernameopt" name="studentusernameopt" value="{{ student.username }}" > {{ student.username }}</option>
                        {% endfor %}
                    </select>
                </div>

            </div>
            <div class="form-group">
                <label for="date">Date</label>
                <input type="text" class="form-control" id="date" name="date" placeholder="span"
                       aria-describedby="dateHelp" >
                <span id="dateHelp" class="help-block">Select date for this class.</span>
            </div>
            <div class="form-group">
                <label for="time">Time</label>
                <input type="text" class="form-control" id="time" name="time" placeholder="span"
                       aria-describedby="timeeHelp" >
                <span id="timeeHelp" class="help-block">Select time for this class.</span>
            </div>
            <button type="submit" class="btn btn-warning">Create</button>
        </form>
    </div>
{% endblock %}