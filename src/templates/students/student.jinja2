{% extends "base.jinja2" %}
{% block content %}
    <div class="page-header">
        <h1>Student
            <small>{{ student.username }}</small>
        </h1>
    </div>
    <p>Password: <strong>{{ student.password }}</strong></p><br/>
    <p>firstname: <strong>{{ student.firstname }}</strong></p><br/>
    <p>lastname: <strong>{{ student.lastname }}</strong></p><br/>
    <p>location: <strong>{{ student.location }}</strong></p><br/>
    <p>abonementtype: <strong>{{ student.abonementtype }}</strong></p><br/>
    <p>abonementstartdate: <strong>{{ student.abonementstartdate }}</strong></p><br/>
    <p>active: <strong>{{ student.active }}</strong></p><br/>
    {% if session['email'] in config.ADMINS %}
        <div class="panel panel-default">
            <div class="panel-body">
                <a class="btn btn-warning" href="{{ url_for('students.edit_student', student_id=student._id) }}" role="button">Edit Student</a>
                <a class="btn btn-danger" href="{{ url_for('students.delete_student', student_id=student._id) }}" role="button">Permanently Delete Student</a>
            </div>
        </div>
    {% endif %}


{% endblock %}


